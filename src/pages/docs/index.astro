---
import BaseLayout from '../../layouts/BaseLayout.astro';

const docSections = [
  {
    title: 'User Guide',
    description: 'Getting started, running scans, interpreting results, and generating reports. Covers all 17 scanners and scan modes.',
    icon: 'book',
  },
  {
    title: 'Admin Guide',
    description: 'Installation, configuration, user management, license activation, telemetry settings, and system maintenance.',
    icon: 'cog',
  },
  {
    title: 'API Reference',
    description: 'RESTful API documentation for programmatic access to scans, results, compliance data, and FAIR risk models.',
    icon: 'code',
  },
  {
    title: 'Security Guide',
    description: 'Hardening the platform deployment, secure configuration, network isolation, and audit logging best practices.',
    icon: 'shield',
  },
  {
    title: 'Troubleshooting',
    description: 'Common issues, error codes, scanner diagnostics, AI provider configuration, and database recovery procedures.',
    icon: 'wrench',
  },
  {
    title: 'Training',
    description: 'Step-by-step tutorials, video walkthroughs, compliance mapping exercises, and FAIR risk quantification workshops.',
    icon: 'academic',
  },
];
---

<BaseLayout
  title="Documentation"
  description="Donjon Platform documentation: user guide, admin guide, API reference, security guide, troubleshooting, and training materials."
>
  <!-- Hero -->
  <section class="bg-navy-950 py-16 sm:py-24">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <div class="text-center">
        <h1 class="text-4xl font-extrabold tracking-tight text-white sm:text-5xl lg:text-6xl">
          Documentation
        </h1>
        <p class="mx-auto mt-6 max-w-3xl text-lg text-slate-400">
          Comprehensive documentation for the Donjon Platform. From quick start to advanced configuration, everything you need to deploy and operate the platform effectively.
        </p>
      </div>
    </div>
  </section>

  <!-- Doc Sections -->
  <section class="bg-navy-900 py-16 sm:py-20">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-3">
        {docSections.map((section) => (
          <div class="rounded-lg border border-navy-700 bg-navy-800 p-8">
            <div class="mb-4 flex h-12 w-12 items-center justify-center rounded-lg bg-cyan-600/20">
              {section.icon === 'book' && (
                <svg class="h-6 w-6 text-cyan-400" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M12 6.042A8.967 8.967 0 006 3.75c-1.052 0-2.062.18-3 .512v14.25A8.987 8.987 0 016 18c2.305 0 4.408.867 6 2.292m0-14.25a8.966 8.966 0 016-2.292c1.052 0 2.062.18 3 .512v14.25A8.987 8.987 0 0018 18a8.967 8.967 0 00-6 2.292m0-14.25v14.25" />
                </svg>
              )}
              {section.icon === 'cog' && (
                <svg class="h-6 w-6 text-cyan-400" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M9.594 3.94c.09-.542.56-.94 1.11-.94h2.593c.55 0 1.02.398 1.11.94l.213 1.281c.063.374.313.686.645.87.074.04.147.083.22.127.325.196.72.257 1.075.124l1.217-.456a1.125 1.125 0 011.37.49l1.296 2.247a1.125 1.125 0 01-.26 1.431l-1.003.827c-.293.241-.438.613-.43.992a7.723 7.723 0 010 .255c-.008.378.137.75.43.991l1.004.827c.424.35.534.955.26 1.43l-1.298 2.247a1.125 1.125 0 01-1.369.491l-1.217-.456c-.355-.133-.75-.072-1.076.124a6.47 6.47 0 01-.22.128c-.331.183-.581.495-.644.869l-.213 1.281c-.09.543-.56.94-1.11.94h-2.594c-.55 0-1.019-.398-1.11-.94l-.213-1.281c-.062-.374-.312-.686-.644-.87a6.52 6.52 0 01-.22-.127c-.325-.196-.72-.257-1.076-.124l-1.217.456a1.125 1.125 0 01-1.369-.49l-1.297-2.247a1.125 1.125 0 01.26-1.431l1.004-.827c.292-.24.437-.613.43-.991a6.932 6.932 0 010-.255c.007-.38-.138-.751-.43-.992l-1.004-.827a1.125 1.125 0 01-.26-1.43l1.297-2.247a1.125 1.125 0 011.37-.491l1.216.456c.356.133.751.072 1.076-.124.072-.044.146-.086.22-.128.332-.183.582-.495.644-.869l.214-1.28z" />
                  <path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
              )}
              {section.icon === 'code' && (
                <svg class="h-6 w-6 text-cyan-400" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M17.25 6.75L22.5 12l-5.25 5.25m-10.5 0L1.5 12l5.25-5.25m7.5-3l-4.5 16.5" />
                </svg>
              )}
              {section.icon === 'shield' && (
                <svg class="h-6 w-6 text-cyan-400" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75m-3-7.036A11.959 11.959 0 013.598 6 11.99 11.99 0 003 9.749c0 5.592 3.824 10.29 9 11.623 5.176-1.332 9-6.03 9-11.622 0-1.31-.21-2.571-.598-3.751h-.152c-3.196 0-6.1-1.248-8.25-3.285z" />
                </svg>
              )}
              {section.icon === 'wrench' && (
                <svg class="h-6 w-6 text-cyan-400" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M11.42 15.17l-5.1 5.1a2.121 2.121 0 01-3-3l5.1-5.1m0 0L15 9.75m-3.58 5.42L21.17 5.41a2.121 2.121 0 00-3-3L8.58 12.58" />
                </svg>
              )}
              {section.icon === 'academic' && (
                <svg class="h-6 w-6 text-cyan-400" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M4.26 10.147a60.438 60.438 0 00-.491 6.347A48.627 48.627 0 0112 20.904a48.627 48.627 0 018.232-4.41 60.46 60.46 0 00-.491-6.347m-15.482 0a50.57 50.57 0 00-2.658-.813A59.905 59.905 0 0112 3.493a59.902 59.902 0 0110.399 5.84c-.896.248-1.783.52-2.658.814m-15.482 0A50.697 50.697 0 0112 13.489a50.702 50.702 0 017.74-3.342M6.75 15a.75.75 0 100-1.5.75.75 0 000 1.5zm0 0v-3.675A55.378 55.378 0 0112 8.443m-7.007 11.55A5.981 5.981 0 006.75 15.75v-1.5" />
                </svg>
              )}
            </div>
            <h3 class="text-xl font-semibold text-white">{section.title}</h3>
            <p class="mt-3 text-sm text-slate-400">{section.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Included Notice -->
  <section class="bg-navy-950 py-16 sm:py-20">
    <div class="mx-auto max-w-4xl px-4 sm:px-6 lg:px-8">
      <div class="rounded-lg border border-navy-700 bg-navy-900 p-8 text-center">
        <h2 class="text-2xl font-bold text-white">Documentation Included with Download</h2>
        <p class="mx-auto mt-4 max-w-2xl text-slate-400">
          Full documentation is included with the platform download. After installing, access the complete user guide, admin guide, API reference, and all other documentation directly within the platform interface.
        </p>
        <div class="mt-8 flex flex-col items-center justify-center gap-4 sm:flex-row">
          <a
            href="/download/"
            class="inline-flex items-center rounded-md bg-cyan-600 px-6 py-3 text-base font-semibold text-white shadow-sm hover:bg-cyan-500 transition-colors"
          >
            Download Platform
          </a>
          <span
            class="inline-flex items-center rounded-md border border-navy-600 bg-navy-800 px-6 py-3 text-base font-semibold text-slate-400 cursor-default"
          >
            GitHub â€” Coming Soon
          </span>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
